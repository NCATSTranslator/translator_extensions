{
  "title": "x-translator extension within info.",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "x-translator is a JSON object describes API-level, Translator-specific information. It is an extension/additional property inside the OpenAPI Info Object. Currently only one component-type allowed per API. x-translator should be present when the translator tag is present, and vice versa.",
  "properties": {
    "tags": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      }
    },
    "info": {
      "type": "object",
      "properties": {
        "x-translator": {
          "type": "object",
          "required": [
            "component",
            "team"
          ],
          "properties": {
            "component": {
              "type": "string",
              "enum": [
                "KP",
                "ARA",
                "ARS",
                "Utility"
              ]
            },
            "team": {
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "type": "string",
                "enum": [
                  "Service Provider",
                  "Multiomics Provider",
                  "Clinical Data Provider",
                  "Connections Hypothesis Provider",
                  "Molecular Data Provider",
                  "Text Mining Provider",
                  "Exposures Provider",
                  "Genetics Provider",
                  "Ranking Agent",
                  "imProve Agent",
                  "Unsecret Agent",
                  "Explanatory Agent",
                  "Expander Agent",
                  "Exploring Agent",
                  "Link Brokers",
                  "Standards Reference Implementation Team"
                ]
              }
            }
          }
        }
      }
    }
  },
  "allOf":[
    {
      "if": {
        "required": ["info"],
        "properties": {
          "info": {
            "required": ["x-translator"]
          }
        }
      },
      "then": {
        "required": ["tags"],
        "properties": {
          "tags": {
            "contains": {
              "type": "object",
              "required": ["name"],
              "properties":
              {"name": {"const": "translator"}}
            }
          }
        }
      }
    },
    {
      "if": {
        "required": ["tags"],
        "properties": {
          "tags": {
            "contains": {
              "type": "object",
              "required": ["name"],
              "properties":
              {"name": {"const": "translator"}}
            }
          }
        }
      },
      "then": {
        "required": ["info"],
        "properties": {
          "info": {
            "required": ["x-translator"]
          }
        }
      }
    }
  ]
}